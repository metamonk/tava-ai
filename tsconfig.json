{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "paths": {
      "@tava-ai/shared": ["./packages/shared/src"],
      "@tava-ai/shared/*": ["./packages/shared/src/*"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./apps/frontend" },
    { "path": "./apps/backend" }
  ]
}
