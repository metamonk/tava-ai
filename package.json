{
  "name": "tava-ai",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "tunnel": "pnpm --filter backend tunnel",
    "tunnel:stop": "pnpm --filter backend tunnel:stop",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev": "pnpm run --parallel dev:frontend dev:backend",
    "build:shared": "pnpm --filter @tava-ai/shared build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build": "pnpm run build:shared && pnpm run build:frontend && pnpm run build:backend",
    "lint": "pnpm --filter frontend lint",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
